{
  "name": "remix-template-vercel-ts",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "yarn run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "yarn build:css && concurrently \"yarn run dev:ts-gql\" \"yarn run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:ts-gql": "ts-gql watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --ignore-path \"./.gitignore\"",
    "generate": "DOTENV_CONFIG_PATH=./.env graphql-codegen -r dotenv/config --config shopify-codegen.json",
    "postinstall": "remix setup node && ts-gql build",
    "lint": "TIMING=1 eslint . --fix --ignore-path \"./.gitignore\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remix-run/react": "^1.3.2",
    "@remix-run/vercel": "^1.3.2",
    "@ts-gql/compiler": "^0.15.0",
    "@ts-gql/tag": "^0.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/schema-ast": "^2.4.1",
    "@remix-run/dev": "^1.3.2",
    "@remix-run/eslint-config": "^1.3.2",
    "@remix-run/serve": "^1.3.2",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "@ts-gql/eslint-plugin": "^0.8.0",
    "@types/eslint": "^8.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "dotenv-cli": "^5.0.0",
    "eslint": "^8.11.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "graphql": "^15.8.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "ts-gql": {
    "addTypenames": false,
    "mode": "no-transform",
    "schema": "./shopify-schema.graphql"
  }
}
